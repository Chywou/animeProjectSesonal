{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="w-50 m-auto border shadow-sm p-5 my-5">
        <h1>Inscrivez-vous !</h1>
        
        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username, {label: 'Pseudo :'}) }}
            {{ form_row(registrationForm.plainPassword, {label: 'Mot de passe :'}) }}
            {{ form_row(registrationForm.agreeTerms, {label: 'Conditions d\'utilisations'}) }}

            <button class="btn btn-lg btn-primary mt-3 mb-3 text-center" type="submit">S'inscrire</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
