{% extends 'base.html.twig' %}

{% block title %}Réinisialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="w-50 m-auto border shadow-sm p-5 my-5">
    <h1>Réinisialiser votre mot de passe</h1>
        {{ form_start(requestForm) }}
            {{ form_row(requestForm.username) }}
            <div>
                <small>
                    Entrez votre adresse mail et nous allons vous envoyer un lien
                    pour réinisialiser votre mot de passe.
                </small>
            </div>

            <button class="btn btn-primary mt-3">Envoyer</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}