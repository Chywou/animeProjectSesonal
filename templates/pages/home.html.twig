{% extends "base.html.twig" %}

{% block body %}
    <div class="container text-center">
        <div class="row">
        {% for day in allDays %}
            <div class="col border mt-3 mb-3 p-0">
                <div class="border-bottom bg-light p-1 pt-2">
                    <h3>{{day.dayName}}</h3>
                </div>
                {% for anime in day.animes %}
                <div class="border-bottom">
                    <div class="card border-0 p-2">
                        <img class="card-img-top" src="https://{{anime.aniImage}}" alt="Card image cap">
                        <div class="card-body p-2">
                            <h5 class="card-title">
                                <a href="{{ path('oneAnime', {id: anime.id, aniName: anime.aniName}) }}" >{{anime.aniName}}</a>
                            </h5>
                            <p class="card-text">{{anime.aniHour|date('H:i')}}<br>épisode {{anime.aniCurrentNB}}/{{anime.aniFullNB}}</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
                <div class="border-bottom">
                    <div class="card border-0 p-2">
                        <img class="card-img-top" src="https://www.nautiljon.com/images/anime/00/09/dr_stone_8290.jpg" alt="Card image cap">
                        <div class="card-body p-2">
                            <h5 class="card-title">Dr.stone</h5>
                            <p class="card-text">16:30<br>épisode 3/12</p>
                        </div>
                    </div>
                </div>
                <div class="border-bottom">
                    <div class="card border-0 p-2">
                        <img class="card-img-top" src="https://www.nautiljon.com/images/anime/00/09/dr_stone_8290.jpg" alt="Card image cap">
                        <div class="card-body p-2">
                            <h5 class="card-title">Dr.stone</h5>
                            <p class="card-text">16:30<br>épisode 3/12</p>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}
